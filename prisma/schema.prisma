// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Item {
  title     String   @id
  picture   String
  createdAt DateTime @default(now())

  category    Category[]
  subcategory Subcategory[]


  @@map("items")
}

model Subcategory {
  id    String @id @default(uuid())
  title String @unique
  item  Item[]

  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  @@map("subcategories")
}

model Category {
  id    String @id @default(uuid())
  title String @unique

  item        Item[]
  subcategory Subcategory[]

  @@map("categories")
}
